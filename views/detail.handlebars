<!-- Jersey Detail View -->
<!-- This page shows complete information about a specific jersey -->

<div class="container">
  <!-- Check if jersey data exists -->
  {{#if jersey}}
    <!-- Back to home link -->
    <a href="/" class="btn-back">← Back to Store</a>
    
    <!-- Jersey detail card -->
    <div class="jersey-detail">
      <!-- Jersey image section -->
      <div class="detail-image">
        <img src="{{jersey.imageUrl}}" 
             alt="{{jersey.team}} jersey"
             onerror="this.src='/images/placeholder-jersey.png'">
      </div>
      
      <!-- Jersey information section -->
      <div class="detail-info">
        <!-- Team name as main heading -->
        <h1>{{jersey.team}}</h1>
        
        <!-- Country name -->
        <p class="country-label">Country: <strong>{{jersey.country}}</strong></p>
        
        <!-- Price displayed prominently -->
        <p class="price-large">${{jersey.price}}</p>
        
        <!-- Action buttons -->
        <div class="detail-actions">
          <!-- Link to edit this jersey in admin panel -->
          <a href="/admin?id={{jersey._id}}" class="btn-edit">Edit Jersey</a>
          
          <!-- Delete button (uses form with method-override for DELETE request) -->
          <form action="/admin/{{jersey._id}}?_method=DELETE" method="POST" class="delete-form">
            <button type="submit" class="btn-delete" onclick="return confirm('Are you sure you want to delete this jersey?')">
              Delete Jersey
            </button>
          </form>
        </div>
      </div>
    </div>
  {{else}}
    <!-- If jersey not found, show error message -->
    <div class="error-message">
      <h2>Jersey Not Found</h2>
      <p>The jersey you're looking for doesn't exist.</p>
      <a href="/" class="btn-back">← Back to Store</a>
    </div>
  {{/if}}
</div>

