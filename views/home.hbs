{{!-- 
  views/home.hbs - Homepage Template
  
  This template displays the homepage with a list of all soccer jerseys.
  It receives the 'jerseys' array from the route handler and displays each jersey as a card.
--}}

{{!-- Page heading --}}
<h1>Welcome to Soccer Jersey Store</h1>
<p class="subtitle">Browse our collection of authentic soccer jerseys</p>

{{!-- Check if there are any jerseys to display --}}
{{#if jerseys}}
  {{!-- Container for jersey cards grid --}}
  <div class="jerseys-grid">
    {{!-- Loop through each jersey in the jerseys array --}}
    {{#each jerseys}}
      {{!-- 
        'this' refers to the current jersey object in the loop
        Each jersey has: _id, name, team, price, imageUrl, createdAt, updatedAt
      --}}
      <div class="jersey-card">
        {{!-- Jersey image --}}
        {{!-- If imageUrl exists, display the image --}}
        {{#if imageUrl}}
          <div class="jersey-image">
            <img src="{{imageUrl}}" alt="{{name}}" onerror="this.src='https://via.placeholder.com/300x400?text=No+Image'">
          </div>
        {{/if}}
        
        {{!-- Jersey information --}}
        <div class="jersey-info">
          {{!-- Jersey name --}}
          <h3>{{name}}</h3>
          
          {{!-- Team name --}}
          <p class="team">{{team}}</p>
          
          {{!-- Price --}}
          {{!-- formatPrice is a Handlebars helper (if registered) or we format inline --}}
          <p class="price">${{price}}</p>
          
          {{!-- Link to view jersey details --}}
          {{!-- /jersey/:id route will show the detail page --}}
          <a href="/jersey/{{_id}}" class="btn btn-primary">View Details</a>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  {{!-- Message shown when no jerseys exist in the database --}}
  <div class="empty-state">
    <p>No jerseys available yet.</p>
    <a href="/add" class="btn btn-primary">Add Your First Jersey</a>
  </div>
{{/if}}

