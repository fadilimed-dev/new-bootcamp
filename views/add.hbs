{{!-- 
  views/add.hbs - Add Jersey Form Template
  
  This template displays a form where users can add a new soccer jersey.
  The form submits data to POST /add route which processes and saves it to MongoDB.
--}}

{{!-- Page heading --}}
<h1>Add New Jersey</h1>
<p class="subtitle">Fill in the details to add a new jersey to the store</p>

{{!-- Display validation errors if any --}}
{{#if errors}}
  <div class="error-box">
    <h3>Please fix the following errors:</h3>
    <ul>
      {{#each errors}}
        {{!-- Loop through and display each error message --}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
  </div>
{{/if}}

{{!-- Add Jersey Form --}}
{{!-- 
  Form attributes:
  - action="/add" - Where to send form data
  - method="POST" - HTTP method (POST is used for creating data)
  - enctype not needed for text fields, but would be needed for file uploads
--}}
<form action="/add" method="POST" class="add-jersey-form">
  
  {{!-- Jersey Name Field --}}
  <div class="form-group">
    <label for="name">Jersey Name *</label>
    {{!-- 
      Input attributes:
      - type="text" - Text input field
      - id="name" - Unique identifier for the field
      - name="name" - Field name sent to server (matches req.body.name)
      - required - HTML5 validation (browser will check before submit)
      - value="{{formData.name}}" - Pre-fill if form was submitted with errors
    --}}
    <input 
      type="text" 
      id="name" 
      name="name" 
      placeholder="e.g., Home Jersey 2023" 
      required
      value="{{#if formData}}{{formData.name}}{{/if}}"
    >
    <small>Enter a descriptive name for the jersey</small>
  </div>

  {{!-- Team Name Field --}}
  <div class="form-group">
    <label for="team">Team Name *</label>
    <input 
      type="text" 
      id="team" 
      name="team" 
      placeholder="e.g., Manchester United" 
      required
      value="{{#if formData}}{{formData.team}}{{/if}}"
    >
    <small>Enter the team name</small>
  </div>

  {{!-- Price Field --}}
  <div class="form-group">
    <label for="price">Price ($) *</label>
    <input 
      type="number" 
      id="price" 
      name="price" 
      placeholder="e.g., 49.99" 
      step="0.01" 
      min="0" 
      required
      value="{{#if formData}}{{formData.price}}{{/if}}"
    >
    <small>Enter the price in dollars (e.g., 49.99)</small>
  </div>

  {{!-- Image URL Field --}}
  <div class="form-group">
    <label for="imageUrl">Image URL *</label>
    <input 
      type="url" 
      id="imageUrl" 
      name="imageUrl" 
      placeholder="https://example.com/jersey.jpg" 
      required
      value="{{#if formData}}{{formData.imageUrl}}{{/if}}"
    >
    <small>Enter a URL to the jersey image</small>
  </div>

  {{!-- Form Submit Button --}}
  <div class="form-actions">
    {{!-- Submit button - sends form data to POST /add route --}}
    <button type="submit" class="btn btn-primary">Add Jersey</button>
    
    {{!-- Cancel button - goes back to homepage --}}
    <a href="/" class="btn btn-secondary">Cancel</a>
  </div>
</form>

{{!-- Back to home link --}}
<div class="back-link-container">
  <a href="/" class="back-link">‚Üê Back to Home</a>
</div>

